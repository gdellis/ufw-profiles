# ShellCheck configuration
# Severity level: style (reports all issues including style suggestions)
severity=style

# Enable all optional checks
enable=all

# External sources (allow sourcing from paths that shellcheck can't follow)
external-sources=true

# Disable specific checks if needed:
# disable=SC1090,SC1091

# SC2249: Consider adding a default *) case
# Disabled because empty defaults are intentional for filtering lines
disable=SC2249